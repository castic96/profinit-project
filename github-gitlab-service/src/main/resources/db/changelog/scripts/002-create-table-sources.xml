<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="scripts/002-create-table-sources" author="Zdenek Castoral">

        <createTable tableName="sources">

            <column name="id" type="bigserial" autoIncrement="true">
                <constraints
                        primaryKey="true"
                        primaryKeyName="PK__sources__id"
                        nullable="false"
                />
            </column>

            <column name="name" type="varchar(255)">
                <constraints
                        nullable="false"
                        unique="true"
                        uniqueConstraintName="UQ__sources__name"
                />
            </column>

            <column name="_created_at" type="timestamp" defaultValueDate="current_timestamp"/>

        </createTable>

        <createIndex tableName="sources" indexName="IX__sources__name">
            <column name="name"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
